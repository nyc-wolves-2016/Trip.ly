<%= form_for @trip, url: trips_path do |f| %>

  <p>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </p>

  <p>
    <%= f.label :start_date %><br>
    <%= f.date_select("trip", "start_date") %>
  </p>

  <p>
    <%= f.label :end_date %><br>
    <%= f.date_select("trip", "start_date") %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
